<% if current_user %>
  Logged in as <%= current_user.username %>.
  <%= link_to "Log Out", logout_path %>
<% else %>
  <%= link_to "Sign Up", signup_path %> or 
  <%= link_to "Log In", login_path %>
<% end %>
<p id="notice"><%= notice %></p>
<h3>Welcome to Calvinbox!</h1>
<p>Once you're signed in, you'll be able to access your quiz below:</p>

<% if current_user.present? && current_user.quiz.present? %>
  <%= link_to 'Start Trivia!', user_quiz_path(current_user, current_user.quiz) %>
<% end %>
